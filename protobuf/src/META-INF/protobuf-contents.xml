<idea-plugin>
  <depends>idea.plugin.protoeditor</depends>

  <extensions defaultExtensionNs="idea.plugin.protoeditor">
    <!-- SettingsFileResolveProvider is listed first so that manually-configured descriptor paths always win. -->
    <fileResolveProvider id="BlazeSettings" implementation="com.google.idea.blaze.protobuf.resolve.BazelFileResolveProvider" order="FIRST" />
    <projectSettingsConfigurator id="BlazeSettings" implementation="com.google.idea.blaze.protobuf.BazelConfigurator" order="first" />

    <!-- Schema definition -->
    <schemaProvider implementation="com.google.idea.blaze.protobuf.resolve.BazelSchemaProvider" order="FIRST" />
  </extensions>

  <extensions defaultExtensionNs="com.google.idea.blaze">
    <SyncPlugin implementation="com.google.idea.blaze.protobuf.sync.BlazePbSyncPlugin"/>
    <SyncStatusContributor implementation="com.google.idea.blaze.protobuf.sync.PbSyncStatusContributor"/>
    <PrefetchFileSource implementation="com.google.idea.blaze.protobuf.sync.PbPrefetchFileSource"/>
    <OutputsProvider implementation="com.google.idea.blaze.protobuf.sync.PbPrefetchFileSource"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <additionalLibraryRootsProvider implementation="com.google.idea.blaze.protobuf.sync.BlazePbAdditionalLibraryRootsProvider"/>
  </extensions>
</idea-plugin>